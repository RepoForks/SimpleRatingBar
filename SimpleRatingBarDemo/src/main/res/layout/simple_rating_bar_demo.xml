<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="com.tigerpenguin.demo.simpleratingbar.SimpleRatingBarDemo">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        
        <include layout="@layout/default_bar"/>

        <include layout="@layout/heart_bar"/>

        <include layout="@layout/circle_bar"/>

        <include layout="@layout/dollar_bar"/>

        <include layout="@layout/music_bar"/>

    </LinearLayout>
</ScrollView>
